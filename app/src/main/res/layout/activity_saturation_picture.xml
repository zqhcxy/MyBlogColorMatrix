<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SimpleMaxtrixActivity2">

    <ImageView
        android:id="@+id/old_pic_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/testpic2" />

    <ImageView
        android:id="@+id/new_pic_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/old_pic_iv"
        android:layout_marginTop="10dp"
        android:src="@drawable/testpic2" />

    <Button
        android:id="@+id/blackWhite_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_pic_iv"
        android:layout_marginTop="10dp"
        android:text="黑白效果" />

    <Button
        android:id="@+id/nostalgia_clr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blackWhite_btn"
        android:text="怀旧效果" />
    <Button
        android:id="@+id/inverse_clr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nostalgia_clr_btn"
        android:text="反色效果" />


</RelativeLayout>
